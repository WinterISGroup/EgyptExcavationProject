@{
    ViewData["Title"] = "Add Record";
}

@model AddRecordModel

<h2 class="text-center text-brass-dark">Create New Burial Record</h2>

@using (Html.BeginForm("AddRecord", "Burial", FormMethod.Post, new { id = "NewBurialForm" }))
{
<div class="form-top-holder">
    <div class="">
        <label for="date-found" class="text-ebony">Date:</label>
        <input asp-for="Burial.DateFound" class="form-control"/>
    </div>
    <div class="">
        <label for="exca-recorder" class="text-ebony">Excavation Recorder:</label>
        <input name="exca-recorder" class="form-control" type="text" />
    </div>
</div>
<div class="form-main text-ebony">
    <div class="form-location form-child">
        <span class="form-section-header">Location</span>
        <span>Square:</span><br />
        <div class="subsection-indent">
            <label>North</label>
            @Html.RadioButtonFor(m => m.Location.LocationNs, 'N', new { @class = "form-radio" })
            <label>South</label>
            @Html.RadioButtonFor(m => m.Location.LocationNs, 'S', new { @class = "form-radio" })

            <br />

            <label>High/Low Pair:</label>
            <input asp-for="Location.HighPairNs" class="form-control form-control-sm form-short" />/<input asp-for="Location.LowPairNs" class="form-control form-control-sm form-short" />
            <br />

            <label>East</label>
            @Html.RadioButtonFor(m => m.Location.LocationEw, 'E', new { @class = "form-radio" })
            <label>West</label>
            @Html.RadioButtonFor(m => m.Location.LocationEw, 'W', new { @class = "form-radio" })
            <br />

            <label>High/Low Pair:</label>
            <input asp-for="Location.HighPairEw" class="form-control form-control-sm form-short" />/<input asp-for="Location.LowPairEw" class="form-control form-control-sm form-short" />
            <br />
        </div>
        <span>Area: </span>
        <label>NW</label>
        @Html.RadioButtonFor(m => m.Location.BurialSubplot, "NW", new { @class = "form-radio" })
        <label>NE</label>
        @Html.RadioButtonFor(m => m.Location.BurialSubplot, "NE", new { @class = "form-radio" })
        <label>SW</label>
        @Html.RadioButtonFor(m => m.Location.BurialSubplot, "SW", new { @class = "form-radio" })
        <label>SE</label>
        @Html.RadioButtonFor(m => m.Location.BurialSubplot, "SE", new { @class = "form-radio" })
        <br />
        <label>Burial #: </label>
        <input asp-for="Burial.BurialNumber" class="form-control form-control-sm form-short" /><br />
    </div>

    <div class="shafts-clusters form-child">
        <span class="form-section-header">Shafts / Clusters</span>
        
        <label>Shaft Number:</label>
        <input type="text" name="shaft-num" class="form-control form-control-sm form-short" /><br />
        <label>Shared Shaft:</label>
        <label>Y</label>
        <input type="radio" name="shared-shaft" class="form-radio" value="Y" onchange="ShowOrHideShafts('Y')" />
        <label>N</label>
        <input type="radio" name="shared-shaft" class="form-radio" value="N" onchange="ShowOrHideShafts('N')"/>
        <label>P</label>
        <input type="radio" name="shared-shaft" class="form-radio" value="P" onchange="ShowOrHideShafts('P')"/>
        <br />
        <div id="shaft_nums" style="display:none;">
            <label>Shared Shaft Numbers:</label>
            <input type="text" class="form-control form-control-sm form-medium" name="shared-shaft-nums" />
        </div>
        
        <label>Cluster:</label>
        <label>Y</label>
        <input type="radio" name="cluster" class="form-radio" value="Y" onchange="ShowOrHideClusters('Y')"/>
        <label>N</label>
        <input type="radio" name="cluster" class="form-radio" value="N" onchange="ShowOrHideClusters('N')"/>
        <br />
        <div id="cluster_data" style="display:none;">
            <label>Other Burial Numbers For Cluster:</label><br />
            <input type="text" class="form-control form-control-sm form-medium" name="cluster-burial-nums" />
            <br />
            <div class="form-cluster-outer" style="display:flex; flex-direction:row; justify-content:space-between;">
                <label>Cluster Number:</label>
                <div class="form-cluster-inner">
                    <label>I</label>
                    <input type="radio" name="cluster-num" class="form-radio" value="1" />
                    <label>II</label>
                    <input type="radio" name="cluster-num" class="form-radio" value="2" />
                    <label>III</label>
                    <input type="radio" name="cluster-num" class="form-radio" value="3" />
                    <br />
                    <label>IV</label>
                    <input type="radio" name="cluster-num" class="form-radio" value="4" />
                    <label>V</label>
                    <input type="radio" name="cluster-num" class="form-radio" value="5" />
                </div>
            </div>
        </div>
        
        
    </div>

    <div class="form-burial-specs form-child">
        <span class="form-section-header">Burial Specifications</span>
        <table class="w-100">
            <tr>
                <td><label>Head Direction: </label></td>
                <td class="text-right"><input asp-for="Burial.HeadDirection" class="form-control form-control-sm form-short" /></td>
                <td></td>
            </tr>
            <tr>
                <td><label>Burial Depth: </label></td>
                <td class="text-right"><input asp-for="Burial.BurialDepth" class="form-control form-control-sm form-short" /></td>
                <td>m</td>
            </tr>
            <tr>
                <td><label>South to Head: </label></td>
                <td class="text-right"><input asp-for="Burial.SouthToHead" class="form-control form-control-sm form-short" /></td>
                <td>m</td>
            </tr>
            <tr>
                <td><label>South to Feet: </label></td>
                <td class="text-right"><input asp-for="Burial.SouthToFeet" class="form-control form-control-sm form-short" /></td>
                <td>m</td>
            </tr>
            <tr>
                <td><label>West to Head: </label></td>
                <td class="text-right"><input asp-for="Burial.WestToHead" class="form-control form-control-sm form-short" /></td>
                <td>m</td>
            </tr>
            <tr>
                <td><label>West to Feet: </label></td>
                <td class="text-right"><input asp-for="Burial.WestToFeet" class="form-control form-control-sm form-short" /></td>
                <td>m</td>
            </tr>
            <tr>
                <td><label>Measured Length: </label></td>
                <td class="text-right"><input asp-for="Burial.LengthOfRemains" class="form-control form-control-sm form-short" /></td>
                <td>m</td>
            </tr>
            <tr>
                <td><label>Calculated Length: </label></td>
                <td class="text-right"><input type="text" name="calculated-length" class="form-control form-control-sm form-short" disabled /></td>
                <td>m</td>
            </tr>
        </table>
    </div>
    
</div>
<hr class="form-divide" />
<div class="form-main-2 text-ebony">
    <div class="form-overall-imp form-child">
        <span class="form-section-header">Preservation Details</span>
        <span>Preservation Index:</span>
        <div class="subsection-indent">
            <table style="width:100%">
                <tr>
                    <td><label>I - only bones</label></td>
                    <td>@Html.RadioButtonFor(m => m.Burial.PreservationIndex, "I", new { @class = "form-radio" })</td>
                </tr>
                <tr>
                    <td><label>II - 5-25%</label></td>
                <td>@Html.RadioButtonFor(m => m.Burial.PreservationIndex, "II", new { @class = "form-radio" })</td>
                </tr>
                <tr>
                    <td><label>III - 25-50%</label></td>
                    <td>@Html.RadioButtonFor(m => m.Burial.PreservationIndex, "III", new { @class = "form-radio" })</td>
                </tr>
                <tr>
                    <td><label>IV - 50-75%</label></td>
                    <td>@Html.RadioButtonFor(m => m.Burial.PreservationIndex, "IV", new { @class = "form-radio" })</td>
                </tr>
                <tr>
                    <td><label>V - 75-100%</label></td>
                    <td>@Html.RadioButtonFor(m => m.Burial.PreservationIndex, "V", new { @class = "form-radio" })</td>
                </tr>
            </table>
        </div>
        
    </div>
    <div class="form-burial-observe form-child">
        <span class="form-section-header">Burial Observations</span>
        <span>Hair Present: </span>
        <label>Y</label>
        @Html.RadioButtonFor(m => m.Burial.HairColor, "Y", new { @class = "form-radio" }) @*FIXME: Change to hair is present*@
        <label>N</label>
        @Html.RadioButtonFor(m => m.Burial.HairColor, "N", new { @class = "form-radio" })
        <label>P</label>
        @Html.RadioButtonFor(m => m.Burial.HairColor, "P", new { @class = "form-radio" })<br />

        <span>Age: </span>
        <label>A</label>
        @Html.RadioButtonFor(m => m.Burial.AgeCode, "A", new { @class = "form-radio" })
        <label>C</label>
        @Html.RadioButtonFor(m => m.Burial.AgeCode, "C", new { @class = "form-radio" })
        <label>N/I</label>
        @Html.RadioButtonFor(m => m.Burial.AgeCode, "N/I", new { @class = "form-radio" })<br />

        <span>Burial Goods: </span>
        <label>Yes</label>
        @Html.RadioButtonFor(m => m.Burial.Goods, "Yes", new { @class = "form-radio" })
        <label>No</label>
        @Html.RadioButtonFor(m => m.Burial.Goods, "No", new { @class = "form-radio" })<br />

        <span>Burial Materials: </span>
        <label>Yes</label>
        <input name="burial-materials" class="form-radio" type="radio" value="Yes" />
        <label>No</label>
        <input name="burial-materials" class="form-radio" type="radio" value="No" /><br />

        <span>Photo: </span>
        <label>Yes</label>
        <input name="burial-materials" class="form-radio" type="radio" value="Yes" />
        <label>No</label>
        <input name="burial-materials" class="form-radio" type="radio" value="No" /><br />
    </div>
</div>
<div class="form-main-3">
    <div class="form-burial-notes">
        <span class="font-weight-bold">Burial Observation Notes:</span><br />
        <textarea asp-for="Burial.Notes"class="form-control form-textarea"></textarea>
    </div>
</div>
<div class="form-bottom">
    <input type="submit" class="btn btn-blackolive mx-auto" name="submitBurialForm" value="Save Record" />
</div>
<hr class="form-divide" />
}