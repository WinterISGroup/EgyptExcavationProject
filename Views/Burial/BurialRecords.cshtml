@{
    ViewData["Title"] = "Burial Records Summary";
}
<h2 class="text-center">Burial Records List</h2>
<br />
<div class="item-holder">
    <div id="filter-main" class="filter-main filter-main-collapsed filter-bkg p-2">
        <span class="filter-header">Select Filter:</span><button class="btn btn-blackolive float-right" onclick="ExpandFilter();">Expand</button>
        <form asp-action="BurialRecords" method="post" id="filterForm">
            <label name="gender">Gender</label>
            <br />
            <label for="male">Male</label>
            <input type="radio" id="male" name="gender" value="male" />
            <br />
            <label for="female">Female</label>
            <input type="radio" id="female" name="gender" value="female" />
            <br />
            <label for="subadult">Subadult</label>
            <input type="radio" id="subadult" name="gender" value="subadult" />
            <br />
            <label for="undetermined">Undetermined</label>
            <input type="radio" id="undetermined" name="gender" value="undetermined" />
            <br />
            <br />
            <label>Hair Color</label>
            <select name="hair-filter">
                <option value="">Select One</option>
                <option value="blonde">Blonde</option>
                <option value="black">Black</option>
                <option value="brown">Brown</option>
                <option value="red">Red</option>
            </select>
            <button type="submit">Filter</button>
        </form>
    </div>
    <div class="card-holder">
        @for (int i = 0; i < 12; i++)
        {
            <div class="card card-burial m-1 p-3 card-bkg hover-pointer" onclick="ViewRecord('@Url.Action("ViewRecord", "Burial", new { id=i })');">
                <img class="card-img-top" src="~/mummy.jpg" />
                <div class="card-body card-text-bkg mt-2">
                    <p class="card-text text-white">
                        Burial Summary: @i<br />
                        Location:<br />
                        Age: <br />
                        Gender: <br />
                    </p>
                    @Html.ActionLink("Remove", "DeleteRecord", "Burial", null, new { @class = "btn btn-brassdark float-right mr-1 ml-1", @onclick="confirm('Are you sure you want to delete this record?');"})
                    @Html.ActionLink("Edit", "EditRecord", "Burial", null, new { @class = "btn btn-brassdark float-right mr-1 ml-1" })
                </div>
            </div>
        }
    </div>
</div>