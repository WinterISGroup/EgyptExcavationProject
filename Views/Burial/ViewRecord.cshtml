@{
    ViewData["Title"] = "View Record";
}

@model AddRecordModel

<h2 class="text-center text-brass-dark">Burial Record</h2>

    <div class="form-top-holder">
        <div class="">
            <div class="text-ebony">Date Found:</div>
            <div>@Html.DisplayFor(m => m.Burial.DateFound)</div>
        </div>
        <div class="">
            <label for="exca-recorder" class="text-ebony">Excavation Recorder:</label>
            <div>@Html.DisplayFor(m => m.Burial.ExcavationRecorder)</div>
        </div>
    </div>
    <div class="form-main text-ebony">
        <div class="form-location form-child">
            <span class="form-section-header">Location Specifications</span>
            <span>Burial ID:</span>
            <div>@Html.DisplayFor(m => m.Location.LocationNs)</div>
            <div>
                @*@Model.location_ns @Model.low_pair_ns / @Model.high_pair_ns @Model.location_ew @Model.low_pair_ew /
                @Model.high_pair_ew @Model.burial_subplot @Model.shaft_num @Model.cluster_num @Model.burial_number*@
            </div>
            <div class="subsection-indent">
                <label>Shaft Number:</label>
                <input type="text" name="shaft-num" class="form-control form-control-sm form-short" /><br />
                <label>Shared Shaft:</label>
                <label>Y</label>
                <input type="radio" name="shared-shaft" class="form-radio" value="Y" />
                <label>N</label>
                <input type="radio" name="shared-shaft" class="form-radio" value="N" />
                <label>P</label>
                <input type="radio" name="shared-shaft" class="form-radio" value="P" />
                <br />
                <label>Shared Shaft Numbers:</label>
                <input type="text" class="form-control form-control-sm form-medium" name="shared-shaft-nums" />
                <br />
            </div>

            <label>Cluster:</label>
            <label>Y</label>
            @*<input type="radio" name="cluster" class="form-radio" value="Y" />*@
            <label>N</label>
            <input type="radio" name="cluster" class="form-radio" value="N" />
            <br />
            <label>Other Burial Numbers For Cluster:</label><br />
            <input type="text" class="form-control form-control-sm form-medium" name="cluster-burial-nums" />
            <br />
            <div class="form-cluster-outer" style="display:flex; flex-direction:row; justify-content:space-between;">
                <label>Cluster Number:</label>
                <div class="form-cluster-inner">
                    <label>I</label>
                    <input type="radio" name="cluster-num" class="form-radio" value="1" />
                    <label>II</label>
                    <input type="radio" name="cluster-num" class="form-radio" value="2" />
                    <label>III</label>
                    <input type="radio" name="cluster-num" class="form-radio" value="3" />
                    <br />
                    <label>IV</label>
                    <input type="radio" name="cluster-num" class="form-radio" value="4" />
                    <label>V</label>
                    <input type="radio" name="cluster-num" class="form-radio" value="5" />
                </div>
            </div>
                <div class="shafts-clusters form-child">
                    <table class="w-100">
                        <tr>
                            <td><label>Head Direction: </label></td>
                            <td class="text-right">@Html.DisplayFor(m => m.Burial.HeadDirection)</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><label>Burial Depth: </label></td>
                            <td class="text-right">@*@Model.burial_depth*@</td>
                            <td>m</td>
                        </tr>
                        <tr>
                            <td><label>South to Head: </label></td>
                            <td class="text-right">@*@Model.south_to_head*@</td>
                            <td>m</td>
                        </tr>
                        <tr>
                            <td><label>South to Feet: </label></td>
                            <td class="text-right">@*@Model.south_to_feet*@</td>
                            <td>m</td>
                        </tr>
                        <tr>
                            <td><label>West to Head: </label></td>
                            <td class="text-right">@*@Model.west_to_head*@</td>
                            <td>m</td>
                        </tr>
                        <tr>
                            <td><label>West to Feet: </label></td>
                            <td class="text-right">@*@Model.west_to_feet*@</td>
                            <td>m</td>
                        </tr>
                        <tr>
                            <td><label>Measured Length: </label></td>
                            <td class="text-right">@*@Model.measured_length*@</td>
                            <td>m</td>
                        </tr>
                        <tr>
                            <td><label>Calculated Length: </label></td>
                            <td class="text-right">@*@Model.calculated_length*@</td>
                            <td>m</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        @*<span>Square:</span><br />
        <div class="subsection-indent">
            <label>North</label>
            <input class="form-radio" name="location-ns" type="radio" value="N" />
            <label>South</label>
            <input class="form-radio" name="location-ns" type="radio" value="S" />
