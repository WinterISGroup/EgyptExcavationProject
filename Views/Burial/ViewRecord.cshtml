    <div class="form-main-2 text-ebony">
        <div class="form-overall-imp form-child">
            <span class="form-section-header">Preservation Details</span>
            <span>Preservation Index:</span>
            <div class="subsection-indent">
                <table style="width:100%">
                    <tr>
                        <td><label>I - only bones</label></td>
                        <td><input name="preservation" type="radio" class="form-radio" value="1" /></td>
                    </tr>
                    <tr>
                        <td><label>II - 5-25%</label></td>
                        <td><input name="preservation" type="radio" class="form-radio" value="2" /></td>
                    </tr>
                    <tr>
                        <td><label>III - 25-50%</label></td>
                        <td><input name="preservation" type="radio" class="form-radio" value="3" /></td>
                    </tr>
                    <tr>
                        <td><label>IV - 50-75%</label></td>
                        <td><input name="preservation" type="radio" class="form-radio" value="4" /></td>
                    </tr>
                    <tr>
                        <td><label>V - 75-100%</label></td>
                        <td><input name="preservation" type="radio" class="form-radio" value="5" /></td>
                    </tr>
                </table>
            </div>

        </div>
        <div class="form-burial-observe form-child">
            <span class="form-section-header">Burial Observations</span>
            <label>Hair Color: </label>
            <input type="text" name="hair-color" class="form-control form-control-sm form-medium" /><br />
            <label>Age: </label>
            <input type="text" name="age" class="form-control form-control-sm form-short" /><br />
            <span>Burial Goods: </span>
            <label>Yes</label>
            <input name="burial-goods" class="form-radio" type="radio" value="Yes" />
            <label>No</label>
            <input name="burial-goods" class="form-radio" type="radio" value="No" /><br />

            <span>Burial Materials: </span>
